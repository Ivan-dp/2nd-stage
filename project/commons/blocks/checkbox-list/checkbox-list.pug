mixin checkbox-button(title)
  label.checkbox-buttons__container 
    input(type='checkbox')  
    span.checkbox-buttons__checkmark
    p=title 

.checkbox-list 
  label.checkbox-list__container expandable checkbox list
    input(type='checkbox')     
    .checkbox-list__checkmark
.checkbox-list 
  label.checkbox-list__container 
    p expandable checkbox list
    input#open(type='checkbox')     
    .checkbox-list__checkmark
