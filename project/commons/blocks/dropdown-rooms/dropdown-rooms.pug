mixin iqdropdown-rooms(title)
  .dropdown-1
    .dropdown-1__title 
      h3.dropdown-1__title__left dropdown
      h3.dropdown-1__title__right= title
    .iqdropdown#rooms&attributes(attributes)
      p.iqdropdown-selection Выберите удобства
      .iqdropdown-menu
        .iqdropdown-menu-option(data-id='rooms1')
          div
            p.iqdropdown-item Спальни
        .iqdropdown-menu-option(data-id='rooms2')
          div
            p.iqdropdown-item Кровати
        .iqdropdown-menu-option(data-id='rooms3')
          div
            p.iqdropdown-item Ванные комнаты
        .button-block
          button.clear-button
            p очистить
          button.apply-button
            p применить
.dropdown-rooms
  +iqdropdown-rooms('default')
  +iqdropdown-rooms('expanded')(class="menu-open")